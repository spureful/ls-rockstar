.feedback {
	color: #fff;
}


.feedback__title {
	font-size: 36px;
	margin-bottom: 80px;
}

.feedback__form {
	max-width: 50%;
}

.feedback__row {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-between;
	margin-bottom: 40px;

	.feedback__lbl {
		width: 48%;
	}
}

.feedback__lbl {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	flex-direction: column;
	position: relative;
